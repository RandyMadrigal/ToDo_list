<main>
  <div class="container center top">
    <div class="col-8">
      
       {{#if errorMessage}}
       {{> ErrorMessage Message=errorMessage}}
      {{/if}}

      <form action="create-user" method="post">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title text-center">Ingrese sus datos</h4>
            <div class="row">
              <div class="col-4 mb-3">
                <label for="Nombre" class="form-label">Nombre</label>
                <input
                  type="text"
                  class="form-control"
                  id="Nombre"
                  name="Nombre"
                  minlength="1"
                  maxlength="30"
                  required
                />
              </div>

              <div class="col-4 mb-3">
                <label for="Apellido" class="form-label">Apellido</label>
                <input
                  type="text"
                  class="form-control"
                  id="Apellido"
                  name="Apellido"
                  minlength="1"
                  maxlength="30"
                  required
                />
              </div>

              <div class="col-4 mb-3">
                <label for="Email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="Email"
                  name="Email"
                  required
                />
              </div>

              <div class="col-4 mb-3">
                <label for="UserName" class="form-label">User Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="UserName"
                  name="UserName"
                  minlength="1"
                  maxlength="30"
                  required
                />
              </div>

              <div class="col-4 mb-3">
                <label for="Password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="Password"
                  name="Password"
                  required
                />
              </div>

              <div class="col-4 mb-3">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="ConfirmPassword"
                  name="ConfirmPassword"
                  required
                />
              </div>

              <div class="flex">
                <button class="btn btn-primary" type="submit">Aceptar</button>
                <a href="/" class="btn btn-secondary">Back</a>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>