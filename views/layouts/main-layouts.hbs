<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../style/style.css" />
    <link rel="stylesheet" href="../..//bootstrap.css/css/bootstrap.min.css" />
    <!--Fontawesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!--Fontawesome -->

    <title>{{title}}</title>
  </head>
  <body>
    <header>
      <nav
        class="navbar navbar-expand-sm navbar-expand-md navbar-expand-lg bg-success gap-2"
      >
        <div class="container-fluid justify-content-start">
          <ul class="navbar-nav col-12">
            <li class="nav-item mx-1">
              <input
                class="form-control"
                type="text"
                placeholder="Search by Title"
                id="filterTitle"
                name="filterTitle"
              />
            </li>
            <li class="nav-item mx-1 flex-grow-1">
              <button
                class="btn btn-outline-light"
                type="submit"
              >Search</button>
            </li>
            <li class="nav-item mx-1 mt-2">
              <p class="text-white"> {{UserName}} </p>
            </li>
            <li class="nav-item mx-1 mt-1">
              <form action="logOut" method="post">
                <button type="submit" class="btn btn-sm btn-outline-light">
                  Cerrar Sesion
                </button>
              </form>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      {{{body}}}
    </main>

    <script src="../../index.js/index.js"></script>
    <script src="../../bootstrap.js/js/bootstrap.min.js"></script>
  </body>
</html>